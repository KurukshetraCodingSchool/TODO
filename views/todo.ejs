<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>To-Do App</title>
  <link rel="stylesheet" href="../stylesheets/todo.css">
</head>
<body>

  <div class="container">
    <header>
     <div class="user">
      <img src="../images/Profile_Image/<%=user.Profile_Image.filename %>" alt="image not found">
      <h2>Hey, <%= user.username%> üòçüëã</h2>
     </div>
      <div class="logout"><a href="/logout">Logout</a></div>
    </header>

    <section class="todo-section">
      <h1> Create Your To-Do List</h1>
      
      <form action="/Todo" method="post">
        <div class="input-area">
          <input type="text" name="WorkName" placeholder="What needs to be done?" required>
          <input type="text" name="Description" placeholder="Description of Work.." required>
          <button type="submit" class="add-btn">Add</button>
        </div>
      </form>

      <!-- Tasks will appear here -->
      <table class="task-table">
        <thead>
          <tr>
            <th>Work Name</th>
            <th>Description</th>
            <th>Date & Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (user.works.length === 0) { %>
            <tr style="opacity: 0.6; pointer-events: none;">
              <td><strong>Example Task</strong></td>
              <td>Complete your assignment</td>
              <td><%= new Date().toDateString() %></td>
              <td>
                <a class="edit-btn" href="javascript:void(0)">Edit</a>
                <button class="delete-btn">Delete</button>
              </td>
            </tr>
          <% } else { %>
            <% user.works.reverse().forEach(function(todo) { %>
              <tr>
                <td><strong><%= todo.WorkName %></strong></td>
                <td><%= todo.Description %></td>
                <td><%= todo.date.toDateString() %></td>
                <td>
                  <a href="/Todo/edit/<%= todo._id %>" class="edit-btn">Edit</a>
                  <form action="/Todo/delete/<%= todo._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="delete-btn">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
      
    </section>
  </div>

</body>
</html>
